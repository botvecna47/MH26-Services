{
  "name": "mh26-services",
  "version": "1.0.0",
  "private": true,
  "description": "MH26 Services Marketplace - Monorepo",
  "workspaces": [
    "frontend",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd server && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd server && npm run build",
    "preview": "concurrently \"npm run start:backend\" \"npm run preview:frontend\"",
    "preview:frontend": "cd frontend && npm run preview",
    "migrate": "cd server && npm run migrate:dev",
    "seed": "cd server && npm run seed",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd server && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd server && npm run lint",
    "start": "npm run start:backend",
    "start:backend": "cd server && npm start",
    "db:studio": "npm run studio --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
