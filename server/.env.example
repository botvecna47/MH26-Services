# MH26 Services Backend - Environment Variables
# Copy this file to .env and fill in your values

# Server
NODE_ENV=development
PORT=5000

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/mh26_services

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# CORS (Frontend URL)
CORS_ORIGIN=http://localhost:5173
CLIENT_URL=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Email - Option 1: Resend (Recommended for Render)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=MH26 Services <onboarding@resend.dev>

# Email - Option 2: SMTP (Gmail - blocked on Render free tier)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=your-email@gmail.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
