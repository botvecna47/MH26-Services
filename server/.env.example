# Database Connection
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB?schema=public"

# Authentication Secrets (Generate strong random strings)
JWT_ACCESS_SECRET="changeme_access_token_secret_min_32_chars"
JWT_REFRESH_SECRET="changeme_refresh_token_secret_min_32_chars"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV="development"
CORS_ORIGIN="http://localhost:5173"

# Frontend Integration
FRONTEND_URL="http://localhost:5173"

# Email Service (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_specific_password"
SMTP_FROM="noreply@mh26services.com"

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID="your_twilio_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="your_twilio_phone_number"
TWILIO_FROM_NUMBER="your_twilio_phone_number"

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID="your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"
RAZORPAY_WEBHOOK_SECRET="your_razorpay_webhook_secret"

# Object Storage (AWS S3 / MinIO)
AWS_ACCESS_KEY_ID="your_access_key"
AWS_SECRET_ACCESS_KEY="your_secret_key"
AWS_S3_BUCKET="mh26-services-uploads"
AWS_REGION="ap-south-1"
AWS_ENDPOINT="http://localhost:9000"

# Redis (Optional)
REDIS_URL="redis://localhost:6379"
